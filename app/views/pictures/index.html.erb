<div class="heading-title">
  <p>Start your Miami exploration by scrolling through others experiences</p>
</div>
<section class="index content">
  <div class="content">
<div id="bootstrap-overrides">
<div class="picture-wrapper row">
  <% @pictures.each do |picture| %>
    <div class="picture">
      <div class="picture-head">
        <div class="name">
        <p><%= time_ago_in_words(picture.created_at) %> ago </p>
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag picture.image.url(:medium), class:'img-responsive'), picture_path(picture) %>
      </div>
      <p class="caption">
        <%= picture.caption %>
      </p>

      <section id="like-button">
        <!-- <p> -->
            <a class="heart" href="#" data-id="<%= picture.id %>">
              <img src="http://i1174.photobucket.com/albums/r615/arianakv/409001-200_zpsl4iralyh.png" alt="heart">
            </a>
            <div id="p2"><%= picture.likes%><div>
        <!-- </p> -->
      </section>

    </div>
  <% end %>
</div>
</div>

<!-- Prev/Next Pages -->
<div id="link">
  <button type="button" class="btn btn-outline-info">
  <%= link_to 'Previous Page', page: @page - 1 %></button>
  <button type="button" class="btn btn-outline-info">
  <%= link_to 'Next Page', page: @page + 1 %></button>
</div>
</div>
</section>
