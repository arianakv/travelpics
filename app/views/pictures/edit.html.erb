


<div class="text-center">
  <%= image_tag @pictures.image.url(:medium) %>
</div>


<div id="bootstrap-edit-overrides">
<div class="form-wrapper">
  <%= simple_form_for @pictures, html: { class: 'form-horizontal', multipart: true } do |f| %>
    <div class="form-group">
      <%= f.input :image %>
    </div>
    <div class="form-group text-center">
      <%= f.input :caption %>
    </div>
    <div class="form-group text-center">
      <%= f.button :submit, class: 'btn-success' %>
    </div>
  <% end %>
  <div class="text-center edit-links">
    <%= link_to "Delete Post", @pictures, method: :delete, data: { confirm: "Are you sure you want to delete this post?" } %>
    |
    <%= link_to "Cancel", picture_path %>
  </div>
</div>


</div>
